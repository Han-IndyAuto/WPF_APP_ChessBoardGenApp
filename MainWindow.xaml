<Window x:Class="ChessboardGenApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessboardGenApp"
        mc:Ignorable="d"
        Title="Chessboard Generator for Calibration" Height="600" Width="900">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid Background="#F0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Margin="10" BorderBrush="#999" BorderThickness="1" Background="#333">
            <Image Source="{Binding DisplayImage}" Stretch="Uniform"/>
        </Border>

        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="#CCC"/>

        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <GroupBox Header="1. Board Configuration" Grid.Row="0" Padding="5" Margin="0,0,0,10">
                <StackPanel>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="Squares X (Cols)"/>
                            <TextBox Text="{Binding SquaresX}" TextAlignment="Center" Height="25"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Squares Y (Rows)"/>
                            <TextBox Text="{Binding SquaresY}" TextAlignment="Center" Height="25"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Square Size (px)" Margin="0,5,0,0"/>
                    <TextBox Text="{Binding SquareSize}" TextAlignment="Center" Height="25"/>
                    <TextBlock Text="* Margin will be auto-set to 1 square size." FontSize="10" Foreground="Gray"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="2. Generation Settings" Grid.Row="1" Padding="5" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Output Path"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding OutputPath}" VerticalContentAlignment="Center" IsReadOnly="True"/>
                        <Button Grid.Column="1" Content="..." Command="{Binding BrowseCommand}" Margin="2,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Image Count" Margin="0,10,0,0"/>
                    <TextBox Text="{Binding GenCount}" TextAlignment="Center" Height="25"/>

                    <TextBlock Text="Distortion Strength (Random Angle)" Margin="0,10,0,0"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <Slider Maximum="0.5" Minimum="0.0" Value="{Binding Distortion}" 
                                TickFrequency="0.05" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding Distortion, StringFormat=F2}" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>
                    <TextBlock Text="0.0 = Flat, 0.5 = Extreme Angle" FontSize="10" Foreground="Gray"/>
                </StackPanel>
            </GroupBox>

            <Button Grid.Row="2" Content="GENERATE IMAGES" Command="{Binding GenerateCommand}" 
                    Height="40" Background="#007ACC" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>

            <GroupBox Header="Generated Files" Grid.Row="3">
                <ListBox ItemsSource="{Binding FileList}" SelectedItem="{Binding SelectedFile}" 
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </GroupBox>

            <TextBlock Grid.Row="4" Text="{Binding StatusMessage}" Foreground="Blue" Margin="0,5,0,0" FontWeight="Bold"/>

        </Grid>
    </Grid>
</Window>